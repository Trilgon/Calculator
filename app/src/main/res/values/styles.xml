<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="ButtonCalc" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="ButtonCalc.Numbers">
        <item name="android:background">@drawable/btn_numbers_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ButtonCalc.RightActions">
        <item name="android:background">@drawable/btn_right_actions_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ButtonCalc.TopActions">
        <item name="android:background">@drawable/btn_top_actions_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>